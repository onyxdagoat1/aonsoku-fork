# Navidrome Server Configuration
# This is the URL to your Navidrome server
VITE_API_URL=http://localhost:4533
VITE_SERVER_URL=http://localhost:4533
VITE_SERVER_USER=demo
VITE_SERVER_PASSWORD=demo

# Supabase Configuration (Optional - for social features & OAuth)
# Get these from https://supabase.com/dashboard/project/_/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Auth Service Configuration (Required for user registration)
# URL to the auth service API (runs on port 3005 by default)
VITE_ACCOUNT_API_URL=http://localhost:3005/api

# YouTube Data API Configuration (Optional - for read-only YouTube features)
# Get API key from https://console.cloud.google.com/apis/credentials
# Enable YouTube Data API v3 for your project
# This allows: browsing videos, viewing statistics, searching channels
VITE_YOUTUBE_API_KEY=your-youtube-api-key-here

# Google OAuth Configuration (Optional - for authenticated YouTube features)
# Required for: liking videos, commenting, managing playlists, importing playlists
# Setup instructions:
# 1. Go to https://console.cloud.google.com/apis/credentials
# 2. Create OAuth 2.0 Client ID (Web application)
# 3. Add authorized redirect URIs:
#    - Development: http://localhost:3000/youtube/callback
#    - Production: https://yourdomain.com/youtube/callback
# 4. Copy Client ID and Client Secret below
# Note: In production, use a backend proxy to keep client secret secure
VITE_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_SECRET=your-client-secret
VITE_GOOGLE_REDIRECT_URI=http://localhost:3000/youtube/callback

# Discord Rich Presence (Optional)
# VITE_DISCORD_CLIENT_ID=your-discord-client-id

# Upload Service (Optional)
# VITE_UPLOAD_SERVICE_URL=http://localhost:3001

# Tag Writer Service (Optional)
# VITE_TAG_WRITER_SERVICE_URL=http://localhost:3002

# =============================================================================
# SERVICE CONFIGURATIONS (for backend services)
# These are read by the service .env.loader.cjs files
# =============================================================================

# Navidrome Connection (Required for all services)
NAVIDROME_URL=http://localhost:4533
NAVIDROME_USERNAME=your_admin_username
NAVIDROME_PASSWORD=your_admin_password

# Auth Service Configuration
AUTH_PORT=3005
AUTH_FRONTEND_URL=http://localhost:3000

# Tag Writer Service Configuration
TAG_WRITER_PORT=3001
TAG_WRITER_MUSIC_PATH=/path/to/music
TAG_WRITER_CORS_ORIGINS=http://localhost:3000

# Upload Service Configuration
UPLOAD_PORT=3002
UPLOAD_MUSIC_PATH=/path/to/music
